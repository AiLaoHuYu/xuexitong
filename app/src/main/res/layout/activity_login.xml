<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_tap_background"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/rv_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:src="@drawable/black_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_browse"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/app_customer"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/app_login"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/et_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login"
            android:layout_alignLeft="@+id/tv_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="@string/app_id_hint"
            android:inputType="textPersonName"
            android:maxEms="1" />

        <RelativeLayout
            android:id="@+id/rv_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_user_id"
            android:layout_alignLeft="@+id/et_user_id">

            <EditText
                android:id="@+id/et_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/app_user_password_hint"
                android:inputType="textPassword"
                android:maxEms="1" />


            <ImageView
                android:id="@+id/iv_user_password"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/user_forget_password"
                android:src="@drawable/lock" />

            <TextView
                android:id="@+id/user_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="@string/login_forget_password"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />


        </RelativeLayout>


        <CheckBox
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_below="@+id/rv_login_password"
            android:layout_alignLeft="@+id/rv_login_password"
            android:gravity="center"
            android:text="@string/login_agree"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_policy"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_below="@+id/rv_login_password"
            android:layout_toRightOf="@+id/agree"
            android:gravity="center"
            android:text="@string/login_agree_login_policy"
            android:textColor="@color/text_blue"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/agree_he"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_below="@+id/rv_login_password"
            android:layout_toRightOf="@+id/login_policy"
            android:gravity="center"
            android:text="å’Œ"
            android:textColor="@color/text_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/user_policy"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_below="@+id/rv_login_password"
            android:layout_toRightOf="@+id/agree_he"
            android:gravity="center"
            android:text="@string/login_agree_user_policy"
            android:textColor="@color/text_blue"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_policy"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_botton_background"
            android:text="@string/btn_login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_marginTop="20dp"
            android:text="@string/login_user_register"
            android:textColor="@color/text_blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_login_by_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="@string/login_by_phone"
            android:textColor="@color/text_blue"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login_by_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/login_by_other"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/text_gray"
        android:layout_marginBottom="50dp"
        android:textSize="12sp" />

</RelativeLayout>